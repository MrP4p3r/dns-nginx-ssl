
server {
    listen 443 ssl;
    server_name (((- app_domain_name -)));

    if ($host != "(((- app_domain_name -)))") {
        return 403;
    }

    ssl_certificate /etc/sslcerts/(((- app_domain_name -)))/cert.pem;
    ssl_certificate_key /etc/sslcerts/(((- app_domain_name -)))/key.pem;

    error_log /var/log/nginx/(((- app_domain_name -))).error.log;
    access_log /var/log/nginx/(((- app_domain_name -))).log;

    keepalive_timeout 5;

    location @app {
        proxy_pass http://(((- app_container_name -)));
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_redirect off;
    }

    location / {
        try_files @app @app;
    }
}
